<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragments.wallet_fragments.WalletFragment">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/Wallet_HL"
        android:textColor=" #007aff"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/create_expense_btn"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/style_home_page_btns"
        android:gravity="center"
        android:text="New Expense"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/my_expenses_btn"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toStartOf="@+id/previous_expenses_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="591dp" />


    <TextView
        android:id="@+id/previous_expenses_btn"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/style_home_page_btns"
        android:gravity="center"
        android:text="Previous Expenses"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/monthly_expenses_btn"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/create_expense_btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="267dp"
        tools:layout_editor_absoluteY="641dp" />


    <TextView
        android:id="@+id/my_expenses_btn"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/style_home_page_btns"
        android:gravity="center"
        android:text="My Expenses"
        android:textSize="20sp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toStartOf="@+id/monthly_expenses_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_expense_btn"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="775dp" />

    <TextView
        android:id="@+id/monthly_expenses_btn"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/style_home_page_btns"
        android:gravity="center"
        android:text="Monthly Expenses"
        android:textSize="20sp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/my_expenses_btn"
        app:layout_constraintTop_toBottomOf="@+id/previous_expenses_btn"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="795dp" />


</androidx.constraintlayout.widget.ConstraintLayout>